{% extends "layouts/default.html.twig" %}


{% block title %}
    New Email
{% endblock %}

{% block content %}
    <div class="panel is-link">
        <p class="panel-heading">
            New Email
        </p>
        <div class="p-4">
            <form action="/send-mail" method="post">
                <div class="field">
                    <label class="label">From</label>
                    <div class="control">
                        <input class="input" type="text" name="from" placeholder="johnDue@email.com">
                    </div>
                </div>
                <div class="field">
                    <label class="label">Subject</label>
                    <div class="control">
                        <input class="input" type="text" name="subject" placeholder="Subject">
                    </div>
                </div>
                <div class="field">
                    <label class="label">Message</label>
                    <div class="control">
                        <textarea class="textarea" name="message" placeholder="Write a Message"></textarea>
                    </div>
                </div>
                <input class="button is-info" type="submit" value="Send">
            </form>
        </div>
    </div>
{% endblock %}